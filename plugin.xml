<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-allow-heap"
        version="1.0.0">

  <name>cordova-plugin-allow-heap</name>

  <description>
    Forces android:largeHeap="true" on the application element of AndroidManifest.xml.
  </description>

  <license>MIT</license>

  <engines>
    <engine name="cordova" version=">=6.4.0"/>
    <engine name="cordova-android" version=">=6.0.0"/>
  </engines>

  <platform name="android">
    <edit-config file="AndroidManifest.xml" target="/manifest" mode="merge">
      <manifest xmlns:tools="http://schemas.android.com/tools"/>
    </edit-config>

    <edit-config file="AndroidManifest.xml" target="/manifest/application" mode="merge">
      <application android:largeHeap="true" tools:replace="android:largeHeap"/>
    </edit-config>
  </platform>

</plugin>
